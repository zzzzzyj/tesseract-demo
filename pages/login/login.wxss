/* pages/auth/login/login.wxss */

.form-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 40rpx;
  /* margin-top: 100rpx; */
  background: #fff;
  /* margin-bottom: 500rpx; */
}

.form-title {
  position: relative;
  background: #fff;
  height: 320rpx;
  margin-bottom: 100rpx;
  text-align: center;
}

.form-title .logo {
  margin-top: 50rpx;
  height: 300rpx;
  width: 300rpx;
}

.form-item {
  position: relative;
  background: #fff;
  height: 96rpx;
  border-bottom: 1px solid #d9d9d9;
}

.form-item .loginname, .form-item .password, .form-item .code {
  position: absolute;
  top: 26rpx;
  left: 0;
  display: block;
  width: 100%;
  height: 44rpx;
  background: #fff;
  color: #333;
  font-size: 34rpx;
}

.form-item .sendsms {
  position: absolute;
  top: 26rpx;
  right: 68rpx;
  z-index: 3;
  display: block;
  background: #fff;
  height: 44rpx;
  width: 250rpx;
  color: #d62119;
  text-align: right;
}

.form-item-code {
  margin-top: 32rpx;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.form-item-code .form-item {
  float: left;
  width: 350rpx;
}

.form-item-code .code-img {
  float: right;
  margin-top: 4rpx;
  height: 88rpx;
  width: 236rpx;
}

.form-item .clear {
  position: absolute;
  top: 26rpx;
  right: 18rpx;
  z-index: 2;
  display: block;
  background: #fff;
  height: 44rpx;
  width: 44rpx;
}

.login-btn {
  margin: 60rpx 0 40rpx 0;
  height: 96rpx;
  line-height: 96rpx;
  background: #4f9cdfe0;
  color: #fff;
  font-size: 34rpx;
  width: 100%;
  border-radius: 6rpx;
}

.register-btn {
  margin: 60rpx 0 40rpx 0;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  width: 100%;
  border-radius: 6rpx;
}

.container {
  height: 1200rpx;
  box-sizing: border-box;
  background-color: #fff;
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
}

view, image, text, navigator {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

view, text {
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
  font-size: 29rpx;
  color: #333;
}
